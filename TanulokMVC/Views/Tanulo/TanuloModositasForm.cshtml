@model TanulokMVC.Models.TanuloModel

@{
    ViewData["Title"] = "TanuloModositasForm";
}

@{
    var osztalyok = (List<OsztalyModel>)ViewData["Osztalyok"];
}
<div class="w3-container" style="margin-top:50px; margin-bottom:50px;">
    <h1 class="w3-xxxlarge w3-text-green w3-center w3-border-bottom w3-padding w3-wide"><b>Tanuló Módosítás</b></h1>
</div>

<div class="w3-card-4  w3-margin-right w3-margin-left">
    <header class="w3-container w3-green">
        <h3>Adatok</h3>
    </header>
    <div asp-validation-summary="ModelOnly" class="w3-text-red"></div>
    <form class="w3-container" asp-action="TanuloModositas">
        <input type="hidden" asp-for="TanuloId" />
        <p>
            <label>Osztály</label>
            <select asp-for="OsztalyId" class="w3-select">
                @foreach (var osztaly in osztalyok)
                {
                    <option value="@osztaly.OsztalyId">@osztaly.OsztalyNev</option>

                }
            </select>
            <span asp-validation-for="OsztalyId" class="w3-text-red"></span>
        </p>
        <p>
            <label class="">Vezetéknév</label>
            <input asp-for="VezetekNev" class="w3-input" type="text">
            <span asp-validation-for="VezetekNev" class="w3-text-red"></span>
        </p>
        <p>
            <label>Keresztnév</label>
            <input asp-for="KeresztNev" class="w3-input" type="text">
            <span asp-validation-for="KeresztNev" class="w3-text-red"></span>
        </p>
        <p class="w3-center">
            <button type="submit" class="w3-button w3-white w3-text-orange w3-border w3-border-orange w3-hover-orange w3-round"><i class="fas fa-save w3-margin-right"></i>Mentés</button>
            <a asp-controller="Osztaly" asp-action="OsztalyAdatok" asp-route-osztalyId="@Model.OsztalyId" class="w3-button w3-white w3-text-dark-gray w3-border w3-border-dark-gray w3-hover-dark-gray w3-round"><i class="fas fa-sign-out-alt w3-margin-right"></i>Vissza</a>
        </p>
    </form>
</div>
