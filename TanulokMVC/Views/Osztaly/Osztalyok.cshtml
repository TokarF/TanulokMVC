@model IEnumerable<TanulokMVC.Models.OsztalyModel>

@{
    ViewData["Title"] = "Osztályok";
    var osztaly = TempData["Uzenet"];
}



<div class="w3-container" style="margin-top:50px; margin-bottom:50px;">
    <h1 class="w3-xxxlarge w3-text-green w3-center w3-border-bottom w3-padding w3-wide"><b>Osztályok</b></h1>
</div>

@{if (osztaly != null)
    {
        <div class="w3-panel w3-light-gray w3-card-4 w3-display-container w3-margin-right w3-margin-left">
            <span onclick="this.parentElement.style.display='none'"
                  class="w3-button w3-display-topright">X</span>
            @switch (osztaly.ToString().ToLower())
            {
                case "hozzaadas_siker":
                    <p class="w3-text-green">Osztály sikeresen hozzáadva!</p>
                    break;
                case "hozzaadas_hiba":
                    <p class="w3-text-red">Hiba történt az osztály hozzáadásakor!</p>
                    break;
                case "modositas_siker":
                    <p class="w3-text-green">Osztály sikeresen módosítva!</p>
                    break;
                case "modositas_hiba":
                    <p class="w3-text-red">Hiba történt az osztály módosításakor!</p>
                    break;
            }
        </div>
    }
}


<div class="w3-container w3-center" style="margin-top:50px; margin-bottom:50px;" id="showcase">
    <a asp-action="UjOsztalyForm" class="w3-button w3-white w3-text-green w3-border w3-border-green w3-hover-green w3-round"><i class="fas fa-plus w3-margin-right"></i>Új osztály</a>
</div>


<div class="w3-card-4 w3-margin-right w3-margin-left " id="osztaly" style="margin-bottom: 50px">
    <table class="w3-table w3-bordered w3-striped w3-centered">
        <thead>
            <tr class="w3-green">
                <th style="width: 10%;">@Html.DisplayNameFor(model => model.OsztalyId)</th>
                <th style="width: 10%;">@Html.DisplayNameFor(model => model.OsztalyNev)</th>
                <th class="">@Html.DisplayNameFor(model => model.OsztalyFonok)</th>
                <th class="">@Html.DisplayNameFor(model => model.Tanterem)</th>
                <th style="width: 20%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OsztalyId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OsztalyNev)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OsztalyFonok)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tanterem)
                    </td>
                    <td>
                        <a asp-controller="Osztaly" asp-action="OsztalyAdatok" asp-route-id="@item.OsztalyId" class="w3-button w3-white w3-text-blue w3-border w3-border-blue w3-hover-blue w3-round"><i class="fas fa-eye"></i></a>
                        <a asp-controller="Osztaly" asp-action="OsztalyModositasForm" asp-route-id="@item.OsztalyId" class="w3-button w3-white w3-text-orange w3-border w3-border-orange w3-hover-orange w3-round"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
