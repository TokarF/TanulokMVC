@model TanulokMVC.Models.OsztalyzatModel

@{
    ViewData["Title"] = "Új Osztályzat";
}

<div class="w3-container" style="margin-top:50px; margin-bottom:50px;">
    <h1 class="w3-xxxlarge w3-text-green w3-center w3-border-bottom w3-padding w3-wide"><b>Új Osztályzat</b></h1>
</div>

<div class="w3-card-4 w3-margin-right w3-margin-left">
    <header class="w3-container w3-green">
        <h3>Adatok</h3>
    </header>
    <form id="osztalyzat-felvitel" class="w3-container" asp-action="OsztalyzatFelvitel">
        <div asp-validation-summary="ModelOnly" class="w3-text-red"></div>
        <input type="hidden" asp-for="TanuloId" />
        <input type="hidden" name="osztalyId" value="@ViewBag.OsztalyId" />
        <p>
            <label asp-for="Tantargy"></label>
            <select asp-items="Html.GetEnumSelectList<Tantargyak>()" asp-for="Tantargy" class="w3-select"></select>
            <span asp-validation-for="Tantargy" class="w3-text-red"></span>
        </p>
        <p>
            <label asp-for="OsztalyzatTipus"></label>
            <select asp-items="Html.GetEnumSelectList<OsztalyzatTipus>()" asp-for="OsztalyzatTipus" class="w3-select"></select>
            <span asp-validation-for="OsztalyzatTipus" class="w3-text-red"></span>
        </p>
        <p>
            <label class="w3-margin-right" asp-for="Osztalyzat"></label>
            <input asp-for="Osztalyzat" id="osztalyzat-input-1" class="radio-input-osztalyzat" type="radio" value="1" name="osztalyzat">
            <label class="radio-label-osztalyzat w3-border w3-border-red w3-text-red w3-round" for="osztalyzat-input-1">1</label>
            <input asp-for="Osztalyzat" id="osztalyzat-input-2" class="radio-input-osztalyzat" type="radio" value="2" name="osztalyzat">
            <label class="radio-label-osztalyzat w3-border w3-border-orange w3-text-orange w3-round" for="osztalyzat-input-2">2</label>
            <input asp-for="Osztalyzat" id="osztalyzat-input-3" class="radio-input-osztalyzat" type="radio" value="3" name="osztalyzat" checked>
            <label class="radio-label-osztalyzat w3-border w3-border-blue w3-text-blue w3-round" for="osztalyzat-input-3">3</label>
            <input asp-for="Osztalyzat" id="osztalyzat-input-4" class="radio-input-osztalyzat" type="radio" value="4" name="osztalyzat">
            <label class="radio-label-osztalyzat w3-border w3-border-green w3-text-green w3-round" for="osztalyzat-input-4">4</label>
            <input asp-for="Osztalyzat" id="osztalyzat-input-5" class="radio-input-osztalyzat" type="radio" value="5" name="osztalyzat">
            <label class="radio-label-osztalyzat w3-border w3-border-teal w3-text-teal w3-round" for="osztalyzat-input-5">5</label>
            <span asp-validation-for="Osztalyzat" class="w3-text-red"></span>
        </p>
        <p>
            <label asp-for="Megnevezes"></label>
            <input asp-for="Megnevezes" class="w3-input" type="text" />
            <span asp-validation-for="Megnevezes" class="w3-text-red"></span>
        </p>
        <p>
            <label asp-for="Megjegyzes"></label>
            <input asp-for="Megjegyzes" class="w3-input" type="text" />
            <span asp-validation-for="Megjegyzes" class="w3-text-red"></span>
        </p>
        <p>
            <label class="w3-margin-right">@Html.DisplayNameFor(model => model.Sulyozott)</label>
            <input class="w3-check" asp-for="Sulyozott" />
        </p>
        <p>
            <label asp-for="Datum"></label>
            <input asp-for="Datum" class="w3-input" type="date" />
            <span asp-validation-for="Datum" class="w3-text-red"></span>
        </p>
    </form>
</div>

<div class="w3-row-padding" style="margin-top:50px; margin-bottom:50px;">
    <div class="w3-half w3-margin-bottom">
        <button type="submit" style="width:100%;" form="osztalyzat-felvitel" class="w3-button w3-white w3-text-red w3-border w3-border-red w3-hover-red w3-round"><i class="fas fa-save w3-margin-right"></i>Mentés</button>
    </div>
    <div class="w3-half w3-margin-bottom">
        <a asp-controller="Tanulo" asp-action="TanuloAdatok" asp-route-tanuloId="@ViewBag.TanuloId" asp-route-osztalyId="@ViewBag.OsztalyId" style="display:block"  class="w3-button w3-white w3-text-dark-gray w3-border w3-border-dark-gray w3-hover-dark-gray w3-round"><i class="fas fa-sign-out-alt w3-margin-right"></i>Vissza</a>
    </div>
    <div class="w3-quarter"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
