@model TanulokMVC.Models.OsztalyzatModel

@{
    ViewData["Title"] = "OsztalyzatAdatok";

}

<div class="w3-container" style="margin-top:50px; margin-bottom:50px;">
    <h1 class="w3-xxxlarge w3-text-green w3-center w3-border-bottom w3-padding w3-wide"><b>Osztályzat</b></h1>
</div>

<div id="osztalyzat-adatok" class="w3-card-4 w3-margin-right w3-margin-left" style="margin-bottom: 50px;">
    <header class="w3-container w3-green">
        <h3>Adatok</h3>
    </header>
    <div class="w3-row-padding">
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.OsztalyzatId)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.OsztalyzatId)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.TanuloId)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.TanuloId)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.Tantargy)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.Tantargy)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.OsztalyzatTipus)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.OsztalyzatTipus)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.Osztalyzat)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.Osztalyzat)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.Megnevezes)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.Megnevezes)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.Megjegyzes)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.Megjegyzes)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p> <b>@Html.DisplayNameFor(model => model.Sulyozott)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p id="sulyozott">@Html.DisplayFor(model => model.Sulyozott)</p>
        </div>
        <div class="w3-col s4 m4 l4">
            <p><b>@Html.DisplayNameFor(model => model.Datum)</b></p>
        </div>
        <div class="w3-col s8 m8 l8">
            <p>@Html.DisplayFor(model => model.Datum)</p>
        </div>
    </div>
</div>

<div class="w3-row-padding" style="margin-top:50px; margin-bottom:50px;">
    <div class="w3-third">
        <a asp-controller="Osztalyzat" asp-action="OsztalyzatModositasForm" asp-route-osztalyzatId="@Model.OsztalyzatId"  style="display:block" class="w3-button w3-white w3-text-orange w3-border w3-border-orange w3-hover-orange w3-round w3-margin-bottom"><i class="fas fa-edit w3-margin-right"></i>Módosítás</a>
    </div>
    <div class="w3-third">
        <a onclick="document.getElementById('osztalyzat-torles-modal').style.display='block'" style="display:block" class="w3-button w3-white w3-text-red w3-border w3-border-red w3-hover-red w3-round l4 w3-margin-bottom"><i class="fas fa-trash w3-margin-right"></i>Törlés</a>

    </div>
    <div class="w3-third">
        <a asp-controller="Tanulo" asp-action="TanuloAdatok" style="display:block" asp-route-tanuloId="@Model.TanuloId" class="w3-button w3-white w3-text-dark-gray w3-border w3-border-dark-gray w3-hover-dark-gray w3-round w3-margin-bottom"><i class="fas fa-sign-out-alt w3-margin-right"></i>Vissza</a>
    </div>
</div>

@* Osztályzat törlés Modal *@
<div id="osztalyzat-torles-modal" class="w3-modal">
    <div class="w3-modal-content w3-animate-zoom w3-card-4">
        <header class="w3-container w3-red w3-center">
            <h2>Osztályzat Törlés</h2>
        </header>
        <div class="w3-container w3-center">
            <p>Valóban törölni szeretné az osztályzatot?</p>
        </div>
        <footer class="w3-container w3-padding w3-center">
            <a id="btn-torles" asp-controller="Osztalyzat" asp-action="OsztalyzatTorles" asp-route-osztalyzatId="@Model.OsztalyzatId" asp-route-tanuloId="@Model.TanuloId" class="w3-button w3-white w3-text-red w3-border w3-border-red w3-hover-red w3-round"><i class="fas fa-check w3-margin-right"></i>Igen</a>
            <a id="btn-megsem" onclick="document.getElementById('osztalyzat-torles-modal').style.display='none'" class="w3-button w3-white w3-text-dark-gray w3-border w3-border-dark-gray w3-hover-dark-gray w3-round"><i class="fas fa-times w3-margin-right"></i>Mégsem</a>
        </footer>
    </div>
</div>

@*  *@
<script>
    let sulyozott = document.querySelector("#sulyozott").firstChild.classList.add("w3-check");
</script>
